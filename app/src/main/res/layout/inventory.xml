<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:textColor="#3E3E3E"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context=".AddInventory">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#3E3E3E">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="282dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/invetario" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:text="Agregar al inventario"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="14dp">

            <TextView
                android:id="@+id/NG"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:text="Nombre genérico:"
                android:textColor="#3E3E3E" />

            <EditText
                android:id="@+id/ed1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:hint="Ej. Acetaminofén"
                android:inputType="textShortMessage"
                android:paddingStart="8dp"
                android:textColor="#3E3E3E"
                android:textColorHint="#B5B5B5"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="14dp">

            <TextView
                android:id="@+id/P"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:text="Precio (COP):"
                android:textColor="#3E3E3E" />

            <EditText
                android:id="@+id/ed2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:hint="Ej. 2000"
                android:paddingStart="8dp"
                android:textColor="#3E3E3E"
                android:textColorHint="#B5B5B5"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="14dp">

            <TextView
                android:id="@+id/U"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:text="Unidades x empaque:"
                android:textColor="#3E3E3E" />

            <EditText
                android:id="@+id/ed3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:hint="Ej. 10"
                android:paddingStart="8dp"
                android:textColor="#3E3E3E"
                android:textColorHint="#B5B5B5"
                android:textSize="15sp" />
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="14dp">

                <TextView
                    android:id="@+id/Cons"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="14dp"
                    android:text="Concentración (mg):"
                    android:textColor="#3E3E3E" />

                <EditText
                    android:id="@+id/ed4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:hint="Ej. 500"
                    android:paddingStart="8dp"
                    android:textColor="#3E3E3E"
                    android:textColorHint="#B5B5B5"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="14dp">

                <TextView
                    android:id="@+id/UP"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="14dp"
                    android:text="Unidades totales:"
                    android:textColor="#3E3E3E" />

                <EditText
                    android:id="@+id/ed5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:hint="Ej. 10"
                    android:paddingStart="8dp"
                    android:textColor="#3E3E3E"
                    android:textColorHint="#B5B5B5"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/blueshape"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:text="Agregar"
                    android:textColor="@android:color/white" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>